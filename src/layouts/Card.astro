---
const { evento } = Astro.props;
---

<div class="bg-gray-100 shadow-lg decoration-1 p-4 my-4 rounded-lg">
    <h1 class="text-2xl font-bold">{evento.lugar}</h1>
    <span class="text-red-500 text-md">{evento.fecha}</span>
    <div class="grid gap-1 my-2">
        <h3 class="text-gray-800 underline decoration-red-500 hover:no-underline hover:text-red-500">
            <a href={evento.ubicación}>Ubicación</a>
        </h3>
        <h4 class="text-gray-700">{evento.hora}</h4>
        <img src={evento.imagen} alt={`Imagen de ${evento.lugar}`} class="rounded-lg" />
    </div>
</div>
